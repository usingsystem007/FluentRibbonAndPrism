<Fluent:RibbonWindow x:Class="FluentRibbonAndPrism.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent" 
					 Title="Fluent Ribbon and Prism V2.2 demo. Castle Windsor starring as IoC container." 
					 Height="600" Width="800"
					 >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Fluent:Ribbon >
			<Fluent:Ribbon.BackstageItems>
				<Fluent:Button Text="New..." />
				<Fluent:Button Text="Save..." />
				<Fluent:Button Text="Print..." />
			</Fluent:Ribbon.BackstageItems>

		</Fluent:Ribbon>
		<Grid Grid.Row="1">
			<Button Margin="18,18,0,0" HorizontalAlignment="Left" Width="147" Height="32" VerticalAlignment="Top"
					Content="Add new Tab via Prism"
					Command="{Binding CreateNewTabCommand}"
					>
			</Button>
		</Grid>
	</Grid>
</Fluent:RibbonWindow>
