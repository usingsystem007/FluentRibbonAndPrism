<Fluent:RibbonWindow x:Class="FluentRibbonAndPrism.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent" 
					 Title="Fluent Ribbon and Prism V2.2 demo. Using Castle Windsor as IoC container." 
					 Height="600" Width="800"
					 >
	<DockPanel>
		<Fluent:Ribbon >
			<Fluent:Ribbon.BackstageItems>
				<Fluent:Button Text="New..." />
				<Fluent:Button Text="Save..." />
				<Fluent:Button Text="Print..." />
			</Fluent:Ribbon.BackstageItems>

		</Fluent:Ribbon>
	</DockPanel>
</Fluent:RibbonWindow>
